<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/die_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/white1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/die_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/white2"
        app:layout_constraintStart_toEndOf="@+id/die_one"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:id="@+id/die_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/white3"
        app:layout_constraintStart_toEndOf="@+id/die_two"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"/>

    <ImageButton
        android:id="@+id/die_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/white4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/die_one"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/die_five"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/white5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/die_two"
        app:layout_constraintStart_toEndOf="@+id/die_four"
        android:layout_marginStart="8dp"/>

    <ImageButton
        android:id="@+id/die_six"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/die_five"
        app:layout_constraintTop_toBottomOf="@+id/die_three"
        app:srcCompat="@drawable/white6"/>

    <Button
        android:id="@+id/take_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Points"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"/>

    <Spinner
        android:id="@+id/choose_points"
        android:layout_width="272dp"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/take_points"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="457dp"/>

    <Button
        android:id="@+id/roll_dice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Roll Dice"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/take_points"/>
</android.support.constraint.ConstraintLayout>